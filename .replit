modules = ["python-3.11", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uvicorn app:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev -- -H 0.0.0.0 -p 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 6379
externalPort = 3003

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 35877
externalPort = 3002

[[ports]]
localPort = 36239
externalPort = 3000

[[ports]]
localPort = 39333
externalPort = 3001

[[ports]]
localPort = 42005
externalPort = 4200

[[ports]]
localPort = 42665
externalPort = 5173

[nix]
channel = "stable-25_05"
packages = ["redis", "xcodebuild", "zlib"]

[deployment]
deploymentTarget = "autoscale"
build = ["sh", "-c", "cd frontend && npm run build"]
run = ["sh", "-c", "./start.sh"]
