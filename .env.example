# =============================================================================
# Parental Dashboard - Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# --- Required ---

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/parental_dashboard

# JWT secret for token signing (generate with: python -c "import secrets; print(secrets.token_urlsafe(64))")
JWT_SECRET=

# --- External APIs ---

# TMDB API key for movie/TV metadata (https://www.themoviedb.org/settings/api)
TMDB_API_KEY=

# Movie of the Night / Streaming Availability API key (https://rapidapi.com/movie-of-the-night-movie-of-the-night-default/api/streaming-availability)
MOVIE_OF_THE_NIGHT_API_KEY=

# --- Stripe (optional, for subscriptions) ---

STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# --- CORS ---

# Comma-separated list of allowed origins (e.g., http://localhost:3000,https://yourdomain.com)
ALLOWED_ORIGINS=http://localhost:3000

# --- Redis (optional, for API response caching) ---

REDIS_HOST=localhost
REDIS_PORT=6379

# --- Frontend Backend URL (used by Next.js proxy) ---

BACKEND_URL=http://localhost:8000
